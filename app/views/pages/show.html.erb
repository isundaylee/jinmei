<%= render('sidebar') %>

<div id="pages-show-content-container">
  <h1><%= @page.title %></h1>
  <div id="pages-show-content">
    <%= @page.content.html_safe %>
    <% if logged_in_as_admin? %>
      <%= link_to '删除', page_path(@page), method: :delete, confirm: '您真的要删除 "' + @page.title + '" 吗？' %>
      <%= link_to '编辑', edit_page_path(@page) %>
    <% end %>
  </div>
</div>